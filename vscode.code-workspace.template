{
	"gen.globals": {
		"filter": {
			"name": "vscode-workspace-gen",
			"kind": "bin"
		}
	},
	"folders": [
		{
			"path": "."
		}
	],
	"settings": {
		"editor.formatOnSave": true,
		"files.associations": {
			"*.code-workspace.template": "json"
		}
	},
	"launch": {
		"version": "0.2.0",
		"configurations": [
			{
				"type": "lldb",
				"request": "launch",
				"name": "vscode-workspace-gen",
				"cargo": {
					"args": [
						"build",
						"--bin=vscode-workspace-gen",
						"--package=vscode-workspace-gen",
						"--features=qt"
					],
					"filter": "@{filter}"
				},
				"args": [
					"vscode.code-workspace.template"
				],
				"cwd": "${workspaceFolder}"
			},
			{
				"type": "lldb",
				"request": "launch",
				"name": "tests",
				"cargo": {
					"args": [
						"test",
						"--no-run",
						"--bin=vscode-workspace-gen",
						"--package=vscode-workspace-gen"
					],
					"filter": "@{filter}"
				},
				"args": [],
				"cwd": "${workspaceFolder}"
			},
			{
				"type": "lldb",
				"request": "launch",
				"name": "tests ASAN",
				"cargo": {
					"args": [
						"+nightly",
						"test",
						"--no-run",
						"--bin=vscode-workspace-gen",
						"--package=vscode-workspace-gen",
						"-Zbuild-std",
						"--target=x86_64-unknown-linux-gnu"
					],
					"filter": "@{filter}"
				},
				"args": [],
				"cwd": "${workspaceFolder}",
				"env": {
					"RUSTFLAGS": "-Zsanitizer=address"
				}
			}
		]
	},
	"tasks": {
		"version": "2.0.0",
		"tasks": [
			{
				"label": "Run workspace gen",
				"type": "shell",
				"command": "vscode-workspace-gen",
				"args": [
					"vscode.code-workspace.template"
				],
				"problemMatcher": []
			}
		]
	}
}